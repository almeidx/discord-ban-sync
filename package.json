{
	"name": "discord-ban-sync",
	"private": true,
	"author": "Almeida <almeidx@pm.me> (almeidx.dev)",
	"type": "module",
	"scripts": {
		"build": "pnpm build:check && pnpm build:write",
		"build:check": "tsc --noEmit",
		"build:write": "rimraf dist && esbuild \"src/**/*.ts\" --outdir=dist --platform=node --target=node18 --format=esm --sourcemap",
		"fmt": "pnpm format",
		"format": "dprint fmt && denolint",
		"lint": "dprint check && denolint --check-only",
		"start": "node --enable-source-maps dist/index.js",
		"start:env": "env-cmd node --enable-source-maps dist/index.js"
	},
	"imports": {
		"#commands/*": "./dist/commands/*",
		"#listeners/*": "./dist/listeners/*",
		"#structures/*": "./dist/structures/*",
		"#utils/*": "./dist/utils/*"
	},
	"dependencies": {
		"@discordjs/core": "^1.0.1",
		"@discordjs/rest": "^2.0.1",
		"@discordjs/ws": "^1.0.1",
		"colorette": "^2.0.20",
		"pretty-ms": "^8.0.0",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@node-rs/deno-lint": "^1.17.3",
		"@types/node": "^20.5.6",
		"dprint": "^0.40.2",
		"env-cmd": "^10.1.0",
		"esbuild": "^0.19.2",
		"rimraf": "^5.0.1",
		"typescript": "~5.2.2"
	},
	"packageManager": "pnpm@8.6.12"
}
