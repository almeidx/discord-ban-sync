{
	"name": "discord-ban-sync",
	"private": true,
	"author": "Almeida <almeidx@pm.me> (almeidx.dev)",
	"type": "module",
	"imports": {
		"#commands/*": "./dist/commands/*",
		"#listeners/*": "./dist/listeners/*",
		"#structures/*": "./dist/structures/*",
		"#utils/*": "./dist/utils/*"
	},
	"scripts": {
		"build": "pnpm build:check && pnpm build:write",
		"build:check": "tsc --noEmit",
		"build:clean": "node -e \"require('fs').rmSync('dist', { force: true, recursive: true })\"",
		"build:write": "pnpm build:clean && esbuild \"src/**/*.ts\" --outdir=dist --platform=node --target=node20 --format=esm --sourcemap",
		"fmt": "pnpm format",
		"format": "dprint fmt && biome check --apply .",
		"lint": "dprint check && biome check .",
		"start": "node --enable-source-maps dist/index.js",
		"start:env": "node --enable-source-maps --env-file=.env dist/index.js"
	},
	"dependencies": {
		"@discordjs/core": "^1.1.1",
		"@discordjs/rest": "^2.2.0",
		"@discordjs/ws": "^1.0.2",
		"colorette": "^2.0.20",
		"pretty-ms": "^8.0.0",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.4.1",
		"@types/node": "^20.10.1",
		"dprint": "^0.43.2",
		"esbuild": "^0.19.8",
		"typescript": "~5.3.2"
	},
	"packageManager": "pnpm@8.9.2+sha256.8d62573d93061f2722b7b48c9739e96cd4603c3ab153bc81c619dcb9861a214e",
	"engines": {
		"node": "20"
	}
}
